#!/usr/bin/env bash
# Bash script that configures a server
nginx -t

# Starts Nginx service if it's not running
if ! systemctl is-active --quiet nginx; then
    systemctl start nginx
fi

# Checks if port 80 is already in use
if sudo netstat -tuln | grep ':80\s'; then
    echo "Port 80 is already in use by another service."
    exit 1
fi

# Ensures Nginx configuration includes a server block for port 80
cat << EOF | sudo tee /etc/nginx/sites-available/default > /dev/null
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOF

# Enables the default server block if it's not already enabled
if ! [ -e /etc/nginx/sites-enabled/default ]; then
    sudo ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/
fi

# Reloads Nginx to apply changes
sudo systemctl reload nginx

# Creates a simple HTML file
echo "<html><head><title>Test Page</title></head><body><h1>Test Page</h1><p>This is a test page served by Nginx on port 80.</p></body></html>" | sudo tee /var/www/html/index.html > /dev/null
echo "Nginx configured to listen on port 80 for all IPv4 addresses."
